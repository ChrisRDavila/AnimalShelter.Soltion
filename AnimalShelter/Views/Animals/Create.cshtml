@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />
  
  @Html.LabelFor(model => model.Species)
  @Html.TextBoxFor(model => model.Species)
  <br/>

  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  <br/>

  @Html.LabelFor(model => model.Age)
  @Html.TextBoxFor(model => model.Age)
  <br/>

  @Html.LabelFor(model => model.CheckIn)
  @Html.EditorFor(model => model.CheckIn)
  <br/>

  @Html.LabelFor(model => model.Available)
  @Html.CheckBoxFor(model => model.Available)
  <br/>

<input type="submit" value="Add new animal"/>

}

<p>@Html.ActionLink("Back to list", "Index")</p>



