@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Our animals listed by Check In Date</h1>

@if (@Model.Count == 0)
{
  <h3>There are no animals in this shelter yet</h3>
} 

<ul>

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"Name:{animal.Name}" + " " + $"Arrival:{animal.CheckIn}", "Details", new { id = animal.AnimalId })</li>
}

</ul>

<p>@Html.ActionLink("Add new animal", "Create")</p>
<p>@Html.ActionLink("List animals by Name", "Index")</p>